<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background"
    android:clickable="false"
    android:id="@+id/MainVue">


    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="FÃ©licitation"
        android:id="@+id/buttonFelicitation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="78dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Encouragement"
        android:id="@+id/buttonEncouragement"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonFelicitation" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Essaie Encore"
        android:id="@+id/buttonEssaieEncore"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonEncouragement" />

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="Flash"
        android:id="@+id/buttonFlash"
        android:layout_above="@+id/buttonFelicitation"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonSon"
        android:onClick="sendFlash"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="Son"
        android:id="@+id/buttonSon"
        android:layout_above="@+id/buttonFlash"
        android:layout_alignParentStart="true"
        android:onClick="sendSon"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="Clignote"
        android:id="@+id/buttonClignote"
        android:layout_above="@+id/buttonSon"
        android:layout_alignParentStart="true"
        android:onClick="sendClignote"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:id="@+id/imageButton"
        android:background="@drawable/fleche"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:onClick="onNextView"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:id="@+id/imageButton2"
        android:background="@drawable/flechegauche"
        android:layout_marginLeft="40dp"
        android:onClick="onPreviousView"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/buttonSon" />


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/buttonFelicitation"
        android:layout_toEndOf="@id/imageButton2"
        android:layout_toStartOf="@+id/imageButton"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/frameLayout">

        <fragment
            android:name="com.example.paul.telecommande.Empty"
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/empty"/>


    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/frameLayout"
        android:layout_alignEnd="@+id/imageButton2"
        android:layout_marginTop="51dp"
        android:layout_alignParentStart="true" />

</RelativeLayout>


