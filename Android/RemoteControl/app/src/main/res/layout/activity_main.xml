<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background">


    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="FÃ©licitation"
        android:id="@+id/buttonFelicitation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="78dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Encouragement"
        android:id="@+id/buttonEncouragement"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonFelicitation" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Erreur"
        android:id="@+id/buttonErreur"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonEncouragement" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Essaie Encore"
        android:id="@+id/buttonEssaieEncore"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonErreur" />

    <Button
        android:layout_width="78dp"
        android:layout_height="200dp"
        android:text="Texte"
        android:id="@+id/buttonText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="78dp"
        android:layout_height="200dp"
        android:text="Son"
        android:id="@+id/buttonSon"
        android:layout_above="@+id/buttonText"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="78dp"
        android:layout_height="200dp"
        android:text="Image"
        android:id="@+id/buttonImage"
        android:layout_above="@+id/buttonSon"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:id="@+id/imageButton"
        android:background="@drawable/fleche"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>


